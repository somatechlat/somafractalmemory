# -----------------------------------------------------------------------------
# SomaFractalMemory development environment template
# Copy this file to `.env` for local work and update the values as needed.
# -----------------------------------------------------------------------------

# Compose metadata
COMPOSE_PROJECT_NAME=somafractalmemory

# Public API exposure
API_PORT=9595
SOMA_API_PORT=9595
SOMA_GRPC_PORT=50053
SOMA_API_TOKEN=devtoken
SOMA_FORCE_HASH_EMBEDDINGS=1
SOMA_MAX_REQUEST_BODY_MB=5
MEMORY_MODE=evented_enterprise
SOMA_MEMORY_NAMESPACE=api_ns

# Postgres (primary memory store)
POSTGRES_USER=soma
POSTGRES_PASSWORD=soma
POSTGRES_DB=somamemory
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_HOST_PORT=40021
SOMA_POSTGRES_URL=postgresql://soma:soma@postgres:5432/somamemory
HOST_POSTGRES_URL=postgresql://soma:soma@localhost:40021/somamemory

# Redis (cache layer)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_HOST_PORT=40022
HOST_REDIS_HOST=localhost
HOST_REDIS_PORT=40022

# Qdrant (vector database)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_HOST_PORT=40023
QDRANT_URL=http://qdrant:6333
HOST_QDRANT_URL=http://localhost:40023

# Rate limiting defaults (safe for development)
SOMA_RATE_LIMIT_MAX=120
SOMA_RATE_LIMIT_WINDOW_SECONDS=60

# Telemetry
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# ⚠️ Production environments MUST replace all secrets/credentials above with
# values provisioned by the platform secret manager before deployment.
# -----------------------------------------------------------------------------
